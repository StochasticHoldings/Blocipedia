<div>
  <%= render partial: 'votes/voting', locals: { wiki: @wiki } %>
  <h1>
    <%= @wiki.title %> <br>
    <small>
      submitted <%= time_ago_in_words(@wiki.created_at) %> ago by <%= @wiki.user.name %>
    </small>
  </h1>
</div>

<div class="row">
  <div class="col-md-8">
    <p><%= @wiki.body %></p>
    <div>
      <h3>Comments</h3>
      <%= render @wiki.comments %>
    </div>

    <% if current_user %>
    <%= render 'comments/form', comment: Comment.new, wiki: @wiki %>
    <% end %>
  </div>

<div class="col-md-4">
  <% if user_is_authorized_to_edit_wiki?(@wiki) %>
    <%= link_to "Edit", edit_topic_wiki_path(@topic, @wiki), class: 'btn btn-success' %>
  <% end %>

  <% if user_is_authorized_to_delete_wiki?(@wiki) %>
    <%= link_to "Delete wiki", topic_wiki_path(@topic, @wiki), method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this wiki?'} %>
  <% end %>
</div>

  <div class="col-md-4">
    <h3>
      <%= pluralize(@wiki.points, 'point') %>
      <div>
        <small>
          <%= pluralize(@wiki.up_votes, 'up vote') %>,
          <%= pluralize(@wiki.down_votes, 'down vote') %>
        </small>
      </div>
    </h3>

    <% if current_user %>
    <%= render partial: 'favorites/favorite', locals: { wiki: @wiki } %>
    <% end %>

  </div>

</div>
